<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Filamentenlijst.Views.BerekenKost">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" HorizontalScrollBarVisibility="Always" VerticalScrollBarVisibility="Always">
            <StackLayout>
                <Label Text="Aantal meter"/>
                <Entry x:Name="AantalMeter" Keyboard="Numeric"/>
                <Label Text="Duurtijd in minuten"/>
                <Entry x:Name="Duurtijd" Keyboard="Numeric"/>
                <Label Text="Kost per rol"/>
                <Entry x:Name="KostPerRol" Keyboard="Numeric"/>
                <Label x:Name="Kost"/>
                <Button Text="Bereken" Clicked="BerekenKost_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>